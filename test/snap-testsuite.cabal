    clientsession              >= 0.6.0,
    configurator               == 0.1.*,
    containers                 >= 0.3,
    data-lens                  >= 2.0.1 && < 2.1,
    data-lens-template         >= 2.1.1 && < 2.2,
    directory,
    directory-tree             >= 0.10 && < 0.11,
    filepath,
    hashable                   >= 1.1,
    heist                      >= 0.6 && < 0.7,
    mtl                        >= 2,
    mwc-random                 >= 0.8,
    process                    == 1.*,
    snap-core                  >= 0.6 && < 0.7,
    snap-server                >= 0.6 && < 0.7,
    syb                        >= 0.1,
    time                       >= 1.1,
    text                       >= 0.11 && < 0.12,
    transformers               >= 0.2,
    unordered-containers       >= 0.1.4,
    utf8-string                >= 0.3   && < 0.4,
    template-haskell
    --FIXME

  ghc-options: -O2 -Wall -fwarn-tabs -funbox-strict-fields -threaded
               -fno-warn-unused-do-bind


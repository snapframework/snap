    pwstore-fast              >= 2.2      && < 2.5,
    snap-core                 >= 1.0      && < 1.1,
    snap-server               >= 1.0      && < 1.1,
    stm                       >= 2.2      && < 2.5,
    text                      >= 0.11     && < 1.3,
    time                      >= 1.1      && < 1.6,
    transformers              >= 0.2      && < 0.5,
    transformers-base         >= 0.4      && < 0.5,
    unordered-containers      >= 0.1.4    && < 0.3,
    xmlhtml                   >= 0.1      && < 0.3

